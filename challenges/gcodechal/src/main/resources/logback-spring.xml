<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml" />

	<!-- You can override this to have a custom pattern -->
	<property name="CONSOLE_LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
	<property name="FILE_LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>gcodechal.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>gcodechal_%i.log</fileNamePattern>
			<minIndex>2</minIndex>
			<maxIndex>3</maxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>10MB</maxFileSize>
		</triggeringPolicy>
	</appender>
	
	<appender name="TRACE_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>gcodechal_trace.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>gcodechal_trace_%i.log</fileNamePattern>
			<minIndex>2</minIndex>
			<maxIndex>6</maxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>16MB</maxFileSize>
		</triggeringPolicy>
	</appender>
	
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>
	
	<appender name="ASYNC-FILE" class="ch.qos.logback.classic.AsyncAppender">
    	<appender-ref ref="FILE"/>
	</appender>
	<appender name="ASYNC-TRACE-FILE" class="ch.qos.logback.classic.AsyncAppender">
    	<appender-ref ref="TRACE_FILE"/>
	</appender>

	<springProfile name="default, test">
		<root level="info">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="ASYNC-FILE" />
		</root>
		<logger name="org.challenges.gt.gcodechal" additivity="false" level="trace">
			<appender-ref ref="ASYNC-TRACE-FILE" />
		</logger>

	</springProfile>

	<springProfile name="prod">
		<root level="warn">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="ASYNC-FILE" />
		</root>
		<logger name="org.challenges.gt.gcodechal" additivity="true" level="info">
			<appender-ref ref="ASYNC-TRACE-FILE" />
		</logger>
	</springProfile>


</configuration>